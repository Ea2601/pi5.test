# Pi5 Supernode - Optimized Environment Configuration
# Copy this to .env and update values for your environment

# ================================
# Core Database Configuration
# ================================
DATABASE_URL=postgresql://postgres:your_secure_password@localhost:5432/pi5_supernode
POSTGRES_PASSWORD=your_secure_password_here
REDIS_URL=redis://localhost:6379

# ================================  
# Supabase Configuration (Required)
# ================================
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your-supabase-anon-key

# ================================
# API Services Configuration
# ================================
API_GATEWAY_PORT=3000
NETWORK_SERVICE_PORT=3001
VPN_SERVICE_PORT=3002
AUTOMATION_SERVICE_PORT=3003
API_TIMEOUT=10000

# ================================
# Security Configuration
# ================================
JWT_SECRET=your-super-secure-jwt-secret-minimum-32-characters
SESSION_SECRET=your-session-secret-key
JWT_EXPIRES_IN=24h

# ================================
# Frontend Configuration
# ================================
FRONTEND_URL=http://192.168.1.100:5173
# Update with your Pi5's IP address

# ================================
# External Integrations (Optional)
# ================================
TELEGRAM_BOT_TOKEN=1234567890:your-telegram-bot-token
WEBHOOK_BASE_URL=https://your-n8n-instance.com

# ================================
# Monitoring Configuration
# ================================
GRAFANA_PASSWORD=your-grafana-admin-password
LOG_LEVEL=info
LOG_DIR=./logs
PROMETHEUS_PORT=9090

# ================================
# SSL/HTTPS (Production)
# ================================
ENABLE_HTTPS=false
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# ================================
# Performance Optimization
# ================================
CACHE_TTL=300
MAX_CONNECTIONS=100
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX_REQUESTS=100

# ================================
# Network Defaults
# ================================
DEFAULT_VLAN=20
MANAGEMENT_VLAN=10
DNS_CACHE_SIZE=100
DHCP_LEASE_TIME=24 hours

# ================================
# WireGuard Configuration
# ================================
WG_INTERFACE_PREFIX=wg
WG_DEFAULT_PORT=51820
WG_KEY_ROTATION_DAYS=90

# ================================
# Backup Configuration
# ================================
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# ================================
# Application Metadata
# ================================
NODE_ENV=development
APP_VERSION=2.1.4
APP_NAME=Pi5 Supernode